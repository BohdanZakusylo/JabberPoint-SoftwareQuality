<!DOCTYPE module PUBLIC
        "-//Puppy Crawl//DTD Check Configuration 1.3//EN"
        "https://checkstyle.org/dtds/configuration_1_3.dtd">

<module name="Checker">
    <property name="charset" value="UTF-8"/>

    <!-- Naming Conventions -->
    <module name="RegexpSingleline">
        <property name="format" value="^[A-Z][a-zA-Z0-9]*$"/>
        <property name="message" value="Class names should start with a capital letter and use camelCase."/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="^[a-z][a-zA-Z0-9]*$"/>
        <property name="message" value="Method and variable names should start with a lowercase letter and use camelCase."/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="^[A-Z_]+$"/>
        <property name="message" value="Constants should be written in UPPERCASE."/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="RegexpSingleline">
        <property name="format" value="^.*Exception$"/>
        <property name="message" value="Exception classes should end with 'Exception'."/>
        <property name="fileExtensions" value="java"/>
    </module>

    <module name="TreeWalker">
        <module name="Indentation">
            <property name="basicOffset" value="4"/>
        </module>
    </module>
    <module name="TreeWalker">
        <module name="LeftCurly"/>
    </module>
    <module name="TreeWalker">
        <module name="RightCurly"/>
    </module>
    <module name="TreeWalker">
        <module name="NeedBraces"/>
    </module>



    <module name="TreeWalker">
        <module name="WhitespaceAround">
            <property name="allowEmptyConstructors" value="true"/>
            <property name="tokens" value="ASSIGN"/>
        </module>
    </module>

    <module name="TreeWalker">
        <module name="MethodParamPad"/>
    </module>
    <module name="TreeWalker">
        <module name="ParenPad"/>
    </module>

    <module name="EmptyLineSeparator">
        <property name="allowMultipleEmptyLines" value="true"/>
        <property name="allowNoEmptyLineBetweenFields" value="true"/>
        <property name="allowNoEmptyLineBetweenMethods" value="true"/>
    </module>

    <module name="EmptyLineBeforeReturn"/>

    <!-- Ordering -->
    <module name="DeclarationOrder"/>

    <!-- Getter and Setter Ordering -->
    <module name="CustomImportOrder">
        <property name="customImportOrderRules" value="STATIC_IMPORTS_LAST"/>
        <property name="separateLineBetweenGroups" value="true"/>
    </module>

    <!-- Enum Constants on Separate Lines -->
    <module name="EnumDeclaration"/>

    <!-- Unit Testing -->
    <module name="FileTabCharacter"/>

</module>
